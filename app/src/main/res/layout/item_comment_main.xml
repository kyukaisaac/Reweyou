<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_effect4"
    android:minHeight="48dp"
    android:orientation="horizontal"
    android:paddingBottom="4dp">

    <in.reweyou.reweyou.customView.CircularImageView
        android:id="@+id/image"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/download"
        app:myborderWidth="0dp" />

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/image"
        android:text="Username"
        android:textColor="#212121"
        android:textSize="13dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/image"
        android:paddingRight="8dp"
        android:text="Hello World!"
        android:textColor="#616161"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/comment"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@+id/image"
        android:paddingRight="8dp"
        android:paddingTop="1dp"
        android:text="2 hr ago"
        android:textColor="#959595"
        android:textSize="11dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/userlevel"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_gravity="center"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/username"
        android:background="@drawable/background_user_level"
        android:drawableLeft="@drawable/ic_user_level_layer_small"
        android:drawablePadding="2dp"
        android:gravity="center_vertical"
        android:lines="1"

        android:maxLines="5"
        android:paddingLeft="5dp"
        android:paddingRight="7dp"

        android:text="Expert"
        android:textColor="#fff"
        android:textSize="10.5dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/reply"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/image"
        android:background="@drawable/ripple_effect2"
        android:drawablePadding="6dp"
        android:drawableRight="@drawable/ic_reply_layer"
        android:paddingBottom="4dp"
        android:paddingLeft="12dp"
        android:paddingRight="16dp"
        android:paddingTop="4dp"
        android:text="Reply"
        android:textColor="#424242"
        android:textSize="12dp"
        android:textStyle="bold" />


</RelativeLayout>