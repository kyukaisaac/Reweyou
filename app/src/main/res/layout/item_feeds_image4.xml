<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"


    android:clickable="true"
    android:stateListAnimator="@animator/lift_on_touch"
    card_view:cardBackgroundColor="#fff"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="1.5dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true"
    tools:targetApi="lollipop">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:paddingLeft="16dp">

            <in.reweyou.reweyou.customView.CircularImageView
                android:id="@+id/profilepic"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:src="@drawable/download"
                card_view:myborderWidth="0dp" />

            <TextView
                android:id="@+id/usernamee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@+id/profilepic"
                android:paddingLeft="12dp"
                android:text="Username"
                android:textColor="#424242"
                android:textSize="13dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/usernamee"
                android:layout_toRightOf="@+id/profilepic"
                android:paddingLeft="12dp"
                android:text="2 hour ago"
                android:textColor="#9e9e9e"
                android:textSize="12dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:alpha=".44"
            android:background="@color/divider" />


        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/a"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/image"
            android:alpha="0.54"
            android:ellipsize="end"
            android:maxLines="5"
            android:paddingBottom="10dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="4dp"
            android:text="The unprecedented policy decision by the Government to Demonetize the economy of the higher denomination currencies (i.e. Rs. 500 and Rs. 1000), comprises of three broad aspects. With the objective of cracking down on Black money, counterfeit (fake currency),
terro"
            android:textColor="#000000"
            android:textSize="13dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <in.reweyou.reweyou.customView.CustomImageView
                android:id="@+id/image1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:background="@drawable/border_grey"

                android:padding="1dp"
                android:scaleType="centerCrop" />

            <in.reweyou.reweyou.customView.CustomImageView
                android:id="@+id/image2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:background="@drawable/border_grey"

                android:padding="1dp"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <in.reweyou.reweyou.customView.CustomImageView
                android:id="@+id/image3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:background="@drawable/border_grey"
                android:padding="1dp"
                android:scaleType="centerCrop" />

            <in.reweyou.reweyou.customView.CustomImageView
                android:id="@+id/image4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"

                android:background="@drawable/border_grey"
                android:padding="1dp"
                android:scaleType="centerCrop" />

        </LinearLayout>


        <View
            android:id="@+id/c"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_below="@+id/b"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:alpha="0.44"
            android:background="@color/divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="end"
            android:layout_marginRight="16dp">


            <ImageView
                android:id="@+id/itemp"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:paddingBottom="12dp"
                android:paddingLeft="8dp"
                android:paddingTop="12dp"
                card_view:srcCompat="@drawable/ic_heart_like" />

            <ImageView
                android:id="@+id/i1"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:paddingBottom="12dp"
                android:paddingLeft="8dp"
                android:paddingTop="12dp"
                card_view:srcCompat="@drawable/ic_heart_like_grey" />

            <TextView
                android:id="@+id/likenumber"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/i1"
                android:gravity="center"
                android:text="26" />

            <ImageView
                android:id="@+id/comment"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_gravity="end"

                android:layout_toLeftOf="@+id/commentnumber"
                android:paddingBottom="12dp"
                android:paddingLeft="8dp"
                android:paddingTop="12dp"
                card_view:srcCompat="@drawable/ic_chat_comment" />

            <TextView
                android:id="@+id/commentnumber"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="15" />
        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>

