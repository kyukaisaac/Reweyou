<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.reweyou.reweyou.CreateActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="4dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="48dp"
            android:isScrollContainer="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="18dp"
                    android:text="Create a Post"
                    android:textSize="16dp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    android:visibility="gone">


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <in.reweyou.reweyou.customView.CustomImageView
                            android:id="@+id/image1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/border_grey"
                            android:padding="1dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/ic_add_black_24dp" />

                        <in.reweyou.reweyou.customView.CustomImageView
                            android:id="@+id/image2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"

                            android:background="@drawable/border_grey"
                            android:padding="1dp"
                            android:scaleType="centerInside"

                            app:srcCompat="@drawable/ic_add_black_24dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/l2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <in.reweyou.reweyou.customView.CustomImageView
                            android:id="@+id/image3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/border_grey"

                            android:padding="1dp"
                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/ic_add_black_24dp" />

                        <in.reweyou.reweyou.customView.CustomImageView
                            android:id="@+id/image4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/border_grey"

                            android:padding="1dp"

                            android:scaleType="centerInside"
                            app:srcCompat="@drawable/ic_add_black_24dp" />
                    </LinearLayout>
                </LinearLayout>

                <android.support.v7.widget.CardView
                    android:id="@+id/cd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="12dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="#fff"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="@drawable/border_link"
                        android:minHeight="100dp"
                        android:paddingBottom="4dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="4dp">


                        <TextView
                            android:id="@+id/headlinelink"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"

                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            android:textColor="#424242"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/descriptionlink"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/headlinelink"
                            android:ellipsize="end"
                            android:maxLines="4"

                            android:paddingBottom="8dp"
                            android:textColor="#424242"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/linklink"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/descriptionlink"
                            android:ellipsize="end"
                            android:fontFamily="sans-serif-condensed"
                            android:maxLines="1"
                            android:paddingBottom="8dp"
                            android:paddingRight="16dp"
                            android:textColor="#757575"
                            android:textSize="14dp"
                            android:textStyle="italic" />


                        <ProgressBar
                            android:id="@+id/linkpd"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:visibility="gone" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <EditText
                    android:id="@+id/groupname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="Share your thoughts..."
                    android:inputType="textMultiLine"
                    android:maxLength="500"
                    android:minLines="2"
                    android:paddingBottom="14dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="14dp"
                    android:paddingTop="10dp"
                    android:textColor="#424242"
                    android:textColorHint="#9e9e9e"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="14dp"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.7dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#757575" />

                <Button
                    android:id="@+id/create"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/border_grey"
                    android:text="POST"
                    android:textColor="#9e9e9e"
                    android:textSize="13dp" />

            </LinearLayout>
        </ScrollView>


        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_gravity="bottom"
            android:background="#fff"
            android:orientation="horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"

                android:background="#757575" />

            <RelativeLayout
                android:id="@+id/camera"
                android:layout_width="wrap_content"

                android:layout_height="match_parent"
                android:background="@drawable/ripple_effect2">

                <ImageView
                    android:id="@+id/c1"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"

                    android:paddingLeft="12dp"
                    android:paddingRight="4dp"
                    android:scaleType="center"
                    app:srcCompat="@drawable/ic_photo_camera_black_24px_grey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/c1"
                    android:gravity="center_vertical"
                    android:paddingRight="8dp"
                    android:text="IMAGE"
                    android:textSize="11dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/link"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/camera"
                android:background="@drawable/ripple_effect2">

                <ImageView
                    android:id="@+id/c2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:paddingLeft="2dp"
                    android:scaleType="center"
                    app:srcCompat="@drawable/ic_attach_file_black_24px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/c2"
                    android:gravity="center_vertical"
                    android:paddingRight="10dp"
                    android:text="LINK"
                    android:textSize="11dp" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>

