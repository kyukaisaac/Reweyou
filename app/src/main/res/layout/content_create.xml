<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.reweyou.reweyou.CreateActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="4dp"
        app:cardBackgroundColor="#fff"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="18dp"
                    android:text="Create a Post"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="16dp"
                    android:visibility="gone" />


                <android.support.v7.widget.CardView
                    android:id="@+id/cd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="12dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="#fff"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="@drawable/border_link"
                        android:minHeight="100dp"
                        android:paddingBottom="4dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="4dp">


                        <TextView
                            android:id="@+id/headlinelink"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"

                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            android:textColor="#424242"
                            android:textSize="16dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/descriptionlink"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/headlinelink"
                            android:ellipsize="end"
                            android:maxLines="4"

                            android:paddingBottom="8dp"
                            android:textColor="#424242"
                            android:textSize="14dp" />

                        <ProgressBar
                            android:id="@+id/linkpd"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:visibility="gone" />

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <EditText
                    android:id="@+id/groupname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Start writing here..."
                    android:inputType="textMultiLine"
                    android:maxLength="500"
                    android:minLines="1"
                    android:paddingBottom="14dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:paddingTop="12dp"
                    android:textColor="#616161"
                    android:textColorHint="#9e9e9e"
                    android:textCursorDrawable="@drawable/color_cursor"
                    android:textSize="14dp"

                    />

            </LinearLayout>
        </ScrollView>


        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#fff"
            android:minHeight="48dp"
            android:orientation="horizontal">

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"

                android:background="#757575" />


            <ImageView
                android:id="@+id/camera"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_photo_camera_black_24px_grey" />

            <ImageView
                android:id="@+id/link"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_toRightOf="@+id/camera"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_attach_file_black_24px" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>

