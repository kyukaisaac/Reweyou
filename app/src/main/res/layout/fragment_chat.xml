<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="4dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#fff"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:text="Welcome to Group Chat"
                android:textColor="@color/main_background_pink"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Here you can start a conversation with all similar interest people. You can discuss latest feed here. "
                android:textColor="#616161" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical|end"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/ripple_effect2"
                android:drawableLeft="@drawable/ic_check_layer"
                android:drawablePadding="0dp"
                android:gravity="start|center_vertical"
                android:paddingLeft="8dp"

                android:text="  GOT IT"
                android:textColor="#283593"
                android:textSize="13dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:background="#fff"
            android:minHeight="48dp"
            android:orientation="horizontal">

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:background="#757575" />

            <EditText
                android:id="@+id/edifeedsttext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t2"
                android:layout_marginRight="44dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:hint="Say Hello..."

                android:inputType="textMultiLine"
                android:maxLength="600"
                android:maxLines="10"
                android:minHeight="48dp"
                android:paddingBottom="10dp"
                android:paddingLeft="14dp"
                android:paddingRight="8dp"
                android:paddingTop="10dp"

                android:textSize="14dp" />

            <ImageView
                android:id="@+id/send"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/t2"

                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="4dp"
                android:padding="4dp"
                app:srcCompat="@drawable/button_send_disable" />

        </RelativeLayout>

</RelativeLayout>

