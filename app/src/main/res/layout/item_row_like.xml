<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:layout_gravity="end"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="16dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/i1"
        android:layout_width="36dp"
        android:layout_height="44dp"
        android:layout_marginLeft="6dp"
        android:scaleType="center"

        card_view:srcCompat="@drawable/ic_happy_small" />

    <TextView
        android:id="@+id/likenumber1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:alpha="0.30"
        android:gravity="center"
        android:paddingRight="3dp"
        android:text="26"
        android:textColor="#424242"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/i2"
        android:layout_width="36dp"
        android:layout_height="44dp"
        android:scaleType="center"


        card_view:srcCompat="@drawable/ic_surprised_small" />

    <TextView
        android:id="@+id/likenumber2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:alpha="0.30"
        android:gravity="center"
        android:paddingRight="3dp"
        android:text="11"
        android:textColor="#424242"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/i3"
        android:layout_width="36dp"
        android:layout_height="44dp"
        android:layout_toRightOf="@+id/i2"
        android:scaleType="center"

        card_view:srcCompat="@drawable/ic_sad_small" />

    <TextView
        android:id="@+id/likenumber3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:alpha="0.30"
        android:gravity="center"
        android:text="2"
        android:textColor="#424242"
        android:textSize="12dp" />

    <android.support.v4.widget.Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/comment"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="end"

        android:paddingBottom="12dp"
        android:paddingLeft="8dp"
        android:paddingTop="12dp"
        card_view:srcCompat="@drawable/ic_chat_comment" />

    <TextView
        android:id="@+id/commentnumber"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_gravity="end"
        android:gravity="center"
        android:text="15"
        android:textColor="#424242" />
</LinearLayout>