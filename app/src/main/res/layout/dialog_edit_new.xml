<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/button_background2"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:background="@color/transparent"
        android:drawableLeft="@drawable/ic_timeline_black_18px_layout2"
        android:drawablePadding="12dp"
        android:inputType="textNoSuggestions|textMultiLine|textCapSentences"
        android:maxLength="600"
        android:maxLines="2"
        android:minHeight="48dp"
        android:paddingBottom="4dp"
        android:paddingLeft="2dp"
        android:paddingTop="4dp"
        android:text="--------"
        android:textColor="#212121"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"

        android:background="@color/greylight" />

    <EditText
        android:id="@+id/des"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:background="@color/transparent"
        android:drawableLeft="@drawable/ic_des_24px_layer"
        android:drawablePadding="12dp"
        android:inputType="textNoSuggestions|textMultiLine|textCapSentences"
        android:maxLength="600"
        android:minHeight="48dp"
        android:paddingBottom="12dp"
        android:paddingLeft="2dp"
        android:paddingTop="12dp"
        android:text="--------"
        android:textColor="#757575"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"

        android:background="@color/greylight" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:alpha=".84"
        android:text="(description should be 600 characters or less)"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12dp" />

    <Button
        android:id="@+id/buttonConfirm"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/button_background_rectangular"
        android:text="Update"
        android:textColor="@color/colorPrimaryDark" />

</LinearLayout>