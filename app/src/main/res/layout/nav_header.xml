<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:paddingTop="20dp">


    <in.reweyou.reweyou.customView.CircularImageView
        android:id="@+id/image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="28dp"
        android:src="@drawable/download"
        app:myborderColor="@color/colorPrimaryDark"
        app:myborderWidth="3dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="16dp"
        android:text="Welcome Guest!"
        android:textColor="#fff"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/signin"
        android:layout_width="70dp"
        android:layout_height="32dp"
        android:layout_below="@+id/tv_name"
        android:layout_centerInParent="true"
        android:layout_marginBottom="12dp"
        android:background="@drawable/button_background_rectangular_invite"
        android:gravity="center"
        android:padding="4dp"
        android:text="SIGN IN"
        android:textColor="@color/colorPrimary"
        android:textSize="12dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/profile_settings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:padding="2dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_settings_white_18px" />
</RelativeLayout>