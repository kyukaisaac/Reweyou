<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#fff"
    card_view:cardCornerRadius="4dp"
    card_view:cardUseCompatPadding="true"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    card_view:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="52dp">

            <in.reweyou.reweyou.customView.CircularImageView

                android:id="@+id/profilepic"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                card_view:myborderWidth="0dp" />

            <TextView
                android:id="@+id/from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/profilepic"
                android:maxLines="1"
                android:text="User"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/from"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/profilepic"
                android:text="Date"
                android:textColor="#80000000"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/action_msg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/action_edit"
                android:alpha="0.94"
                android:padding="11dp"
                card_view:srcCompat="@drawable/ic_paper_plane" />

            <ImageView
                android:id="@+id/action_edit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/overflow"
                android:padding="10.5dp"
                android:scaleType="centerInside"
                card_view:srcCompat="@drawable/ic_edit" />

            <ImageView
                android:id="@+id/overflow"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="4dp"
                android:padding="10dp"
                card_view:srcCompat="@drawable/ic_share" />


        </RelativeLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginBottom="2dp"
            android:alpha=".48"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:fontFamily="sans-serif-medium"
            android:paddingBottom="2dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:text="From"
            android:textColor="@color/colorPrimary"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:autoLink="web"
            android:paddingBottom="8dp"
            android:paddingRight="16dp"
            android:paddingTop="4dp"
            android:text="Headline"

            android:textColor="#424242"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Who"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:autoLink="web"
            android:textColor="#424242"
            android:textSize="14sp" />


        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true" />


        <RelativeLayout
            android:id="@+id/actions"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="10dp">

            <ImageView
                android:id="@+id/locationicon"
                android:layout_width="18dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:padding="2dp"
                card_view:srcCompat="@drawable/ic_location_on_black_18px" />

            <TextView
                android:id="@+id/place"

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"
                android:gravity="center"
                android:text="posted by"
                android:textColor="@color/main"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/reviews"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="0 Likes"
                android:textColor="@color/main"
                android:textSize="12sp" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:alpha=".48"
            android:background="@color/divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"

                android:paddingTop="1dp"
                card_view:srcCompat="@drawable/ic_comment_black_18px" />

            <TextView
                android:id="@+id/app"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/comment"
                android:gravity="center_vertical"
                android:text="Reaction"
                android:textColor="@color/main"
                android:textSize="13dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:orientation="horizontal"
                android:paddingLeft="8dp">

                <ImageView
                    android:id="@+id/upicon"
                    android:layout_width="16dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="4dp"
                    card_view:srcCompat="@drawable/ic_thumb_up_black_16px" />

                <TextView
                    android:id="@+id/upvote"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:text="LIKE"
                    android:textAllCaps="true"
                    android:textColor="@color/main"
                    android:textSize="12sp"

                    android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:alpha=".48"
            android:background="@color/divider" />

        <RelativeLayout
            android:id="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#06000000"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="12dp"
                android:text="User"
                android:textColor="#424242"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginLeft="12dp"
                android:autoLink="web"
                android:text="TextView"
                android:textColor="#616161"
                android:textSize="13sp" />
        </RelativeLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>

