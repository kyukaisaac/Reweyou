<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_marginTop="4dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:background="#fff">

                <TextView
                    android:id="@+id/aaa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="16dp"
                    android:text="Explore groups"
                    android:textColor="#c62828"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_toRightOf="@+id/aaa"
                    android:alpha="0.54"
                    android:paddingTop="1dp"
                    android:text=" - find your interest"
                    android:textColor="#000000"

                    android:textSize="13dp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/explore_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="4dp"
                    android:clipToPadding="false"
                    android:paddingLeft="6dp" />

                <TextView
                    android:id="@+id/txtexplore"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingTop="1dp"
                    android:text="You are following all groups"
                    android:textColor="#757575"
                    android:textSize="13dp"

                    android:visibility="gone" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="270dp"
            app:cardCornerRadius="2dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true">

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="16dp"
                android:text="Your groups"
                android:textColor="#c62828"
                android:textSize="14dp"
                android:textStyle="bold" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/explore_recycler_view_your_groups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="46dp"
                android:paddingBottom="6dp" />

            <TextView
                android:id="@+id/txtgroups"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="1dp"
                android:text="No groups followed yet"
                android:textColor="#757575"
                android:textSize="13dp"

                android:visibility="gone" />
        </android.support.v7.widget.CardView>

        <Space
            android:layout_width="1dp"
            android:layout_height="46dp" />


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
