<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_background3"
    android:clipChildren="false">

    <RelativeLayout
        android:id="@+id/abc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="16dp"

        android:clipChildren="false">

        <in.reweyou.reweyou.customView.CircularImageView
            android:id="@+id/profilepic"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/solid_circle"
            android:padding="2dp"
            app:myborderColor="@color/colorPrimaryDark"
            app:myborderWidth="0dp" />


        <TextView
            android:id="@+id/Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profilepic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:text="---"
            android:textColor="#212121"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Name"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:maxLines="2"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="---"
            android:textColor="#424242"
            android:textSize="12dp" />


        <Button
            android:id="@+id/button"
            android:layout_width="88dp"
            android:layout_height="40dp"
            android:layout_below="@id/Info"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_background_rectangular_white"
            android:text="READ"
            android:textColor="@color/colorPrimaryDark" />


    </RelativeLayout>


    <View
        android:id="@+id/bbb"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_below="@+id/abc"
        android:layout_marginTop="24dp"
        android:background="@color/grey" />


    <TextView
        android:id="@+id/Reports"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bbb"
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@+id/kk"
        android:gravity="center"
        android:text="--"

        android:textColor="#212121"
        android:textSize="19sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Reports"
        android:layout_toLeftOf="@+id/kk"
        android:gravity="center"
        android:text="Reports"
        android:textColor="#424242"
        android:textSize="12dp" />


    <View
        android:id="@+id/kk"
        android:layout_width="0.7dp"
        android:layout_height="44dp"
        android:layout_below="@+id/abc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@color/grey" />

    <TextView
        android:id="@+id/Readers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/bbb"

        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/kk"
        android:gravity="center"
        android:text="--"
        android:textColor="#212121"
        android:textSize="19sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Readers"
        android:layout_toRightOf="@+id/kk"

        android:gravity="center"
        android:text="Readers"

        android:textColor="#424242"
        android:textSize="12dp" />

    <View
        android:id="@+id/sss"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_below="@+id/Readers"
        android:layout_marginTop="24dp"
        android:background="@color/grey" />

    <TextView
        android:id="@+id/viewreport"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/sss"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="?android:selectableItemBackground"
        android:gravity="center"
        android:text="VIEW REPORTS"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14dp"
        android:textStyle="bold" />

</RelativeLayout>

