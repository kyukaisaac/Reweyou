<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"

    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"

            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="32dp"
        android:background="#fff"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorPrimary" />

        <RelativeLayout
            android:id="@+id/abc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"

            android:layout_marginTop="40dp">

            <in.reweyou.reweyou.customView.CircularImageView
                android:id="@+id/profilepic"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-28dp"
                android:background="@drawable/solid_circle"
                android:padding="2dp"

                android:scaleType="centerCrop"
                android:src="@drawable/download"
                app:myborderColor="@color/colorPrimaryDark"
                app:myborderWidth="0dp" />


            <TextView
                android:id="@+id/Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profilepic"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:text="Ayush P Gupta"
                android:textColor="#212121"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Name"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:maxLines="2"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Android Developer at Reweyou"
                android:textColor="#424242"
                android:textSize="12dp" />


            <Button
                android:id="@+id/button"
                android:layout_width="88dp"
                android:layout_height="36dp"
                android:layout_below="@id/Info"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_background_rectangular_white"
                android:text="READ"
                android:textColor="@color/colorPrimaryDark" />


        </RelativeLayout>


        <View
            android:id="@+id/bbb"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_below="@+id/abc"
            android:layout_marginTop="24dp"
            android:background="@color/grey" />


        <TextView
            android:id="@+id/Reports"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bbb"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/kk"
            android:gravity="center"
            android:text="25"

            android:textColor="#212121"
            android:textSize="19sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Reports"
            android:layout_toLeftOf="@+id/kk"
            android:gravity="center"
            android:text="Reports"
            android:textColor="#424242"
            android:textSize="12dp" />


        <View
            android:id="@+id/kk"
            android:layout_width="0.7dp"
            android:layout_height="56dp"
            android:layout_below="@+id/abc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/Readers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/bbb"

            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/kk"
            android:gravity="center"
            android:text="12"
            android:textColor="#212121"
            android:textSize="19sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Readers"
            android:layout_toRightOf="@+id/kk"

            android:gravity="center"
            android:text="Readers"

            android:textColor="#424242"
            android:textSize="12dp" />


    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>